@model Samsys_Custos.Data.CUSTO

@{
    ViewData["Title"] = "Remover Viatura";
}

<center style="padding-top:1%"><h2>Remover Custo de Viatura</h2></center>
<hr />

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <center>
            <h6>Deseja remover este custo?</h6>
        </center>
        <br />
        <dl class="dl-horizontal">
            <dt>
                Colaborador
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UTILIZADOR.nome)
            </dd>
            <dt>
                Categoria
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CATEGORIA.nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.VIATURA)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.VIATURA.matricula)
            </dd>
            <dt>
               Ano
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ano)
            </dd>
            <dt>
                Mês
            </dt>
            <dd>
                @Html.DisplayFor(model => model.mes)
            </dd>
            <dt>
               Valor
            </dt>
            <dd>
                @Html.DisplayFor(model => model.valor)€
            </dd>
        </dl>

        <form asp-action="DeleteViatura">
            <input type="hidden" asp-for="id_custo" />
            <div class="row">
                <div class="col-md-4">
                    <input type="submit" value="Remover" class="btn btnRemove" />
                </div>
                <div class="col-md-1">

                </div>
                <div class="col-md-4">
                    <a class="btn btnVoltar" asp-action="Viatura">Voltar</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
    </div>
</div>
