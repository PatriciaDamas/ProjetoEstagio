@model IEnumerable<Samsys_Custos.Data.CUSTO>

@{
    ViewData["Title"] = "Viatura";
    ViewBag.TitlePage = "Custos de Viaturas";
    ViewBag.Class = "fa-table";
}
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@if (User.IsInRole("SuperAdmin") || User.IsInRole("Viaturas") || User.IsInRole("Gestor"))
{
    <br />
    <center><h2>Custos de Viaturas</h2></center>
    <br />
    <div>
        <a class=" btn btnActionCreate" asp-action="CriarViatura">Novo registo de Viatura</a>
    </div>
    <hr />
}
    <br />

<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    Ano
                </th>
                <th>
                    Mês
                </th>
                <th>
                    Viatura
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Colaborador
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Acções
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ano)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VIATURA.matricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CATEGORIA.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UTILIZADOR.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.valor)€
                    </td>
                    <td>
                        <a asp-action="EditViatura" asp-route-id="@item.id_custo">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.id_custo" asp-route-page="Viatura">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


