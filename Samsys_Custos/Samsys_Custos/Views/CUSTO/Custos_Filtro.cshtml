
@model List<Samsys_Custos.Models.CUSTOS_TOTAIS>
@{ViewData["Title"] = "Custos Totais";}

@{
    ViewBag.TitlePage = "Custos por Categoria";
    ViewBag.Class = "fa-table";
}

<br />
<center><h2>Custos por Categoria - @ViewBag.nomeCategoria</h2></center>
<br />
<hr />
<br />
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>

                <th>
                    Sub-Categoria
                </th>
                <th>
                    Mês
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @{
                            var strarr = item.mes.ToString().ToCharArray();
                            strarr[0] = strarr[0].ToString().ToUpper()[0];
                            string mes = string.Join("", strarr);
                            <p>@mes</p>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)€
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>