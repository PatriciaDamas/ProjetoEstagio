
@{
    ViewData["Title"] = "Grafico";
    ViewBag.TitlePage = "Custos Gerais";
    ViewBag.Class = "fa-bar-chart";
}


<div class="row" style="padding-top:50px">
    <div class="col-lg-7">
        <div class="card mb-3">
            <div class="card-header">
                <p hidden id="cName">@ViewBag.Class</p>
                <i class="fa" id="boxIcon"></i> @ViewBag.TitlePage

            </div>
            <div class="card-body">
                <label class="control-label">Ano</label>
                <select class="form-control col-sm-4" asp-items="ViewBag.ano" id="select_ano">
                    <option value=null>Selecione um ano</option>
                </select>
                <span class="text-danger"></span><div id="chartdiv" style="width: 100%;height: 500px"></div>

                <br>
                <br>
            </div>
        </div>
    </div>

    @{
        ViewData["Title"] = "Grafico";
        ViewBag.TitlePage = "Gráfico Acumulado Anual";
        ViewBag.Class = "fa-bar-chart";
    }

    <div class="col-lg-5">

        <div class="card mb-3">
            <div class="card-header">
                <p hidden id="cName">@ViewBag.Class</p>
                <i class="fa" id="boxIcon2"></i> @ViewBag.TitlePage

            </div>
            <div class="card-body">

                <select class="form-control col-sm-6" asp-items="ViewBag.ano" id="select_ano_custos">
                    <option value=null>Selecione um ano</option>
                </select>
                <br>

                <span class="text-danger"></span><div id="chartdiv2" style="width: 100%;height:556px"></div>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
    <script src="https://www.amcharts.com/lib/3/serial.js"></script>
    <script src="https://www.amcharts.com/lib/3/pie.js"></script>
    <script src="https://www.amcharts.com/lib/3/plugins/dataloader/dataloader.min.js"></script>
    <script src="~/js/chart_gerais.js"></script>
    <script src="~/js/chart_total_ano.js"></script>
}
