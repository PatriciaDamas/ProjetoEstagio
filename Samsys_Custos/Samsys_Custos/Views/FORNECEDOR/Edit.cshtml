@model Samsys_Custos.Data.FORNECEDOR

@{
    ViewData["Title"] = "Edit";
}

<center style="padding-top:1%"><h2>Editar Fornecedor</h2></center>
<hr />
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_fornecedor" />
            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome</label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sugestao_categoria" class="control-label">Categoria</label>
                <select asp-for="sugestao_categoria" class="form-control" asp-items="ViewBag.sugestao_categoria"></select>
                <span asp-validation-for="sugestao_categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sugestao_custo" class="control-label">Custo Interno</label>
                <select asp-for="sugestao_custo" class="form-control">
                    <option value="False">Sim</option>
                    <option value="True">Não</option>
                </select>
                <span asp-validation-for="sugestao_custo" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <a class="btn btnVoltarEdit2 form-control" asp-action="Index">Voltar</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <input type="submit" value="Guardar" class="btn btnSave form-control" />
                </div>
            </div>
        </form>
        
    </div>
    <div class="col-md-4">
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
