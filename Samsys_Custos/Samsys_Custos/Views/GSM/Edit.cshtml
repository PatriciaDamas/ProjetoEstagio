@model Samsys_Custos.Data.GSM

@{
    ViewData["Title"] = "Editar GSM";
}
<center style="padding-top:1%"><h2>Editar GSM</h2></center>
<hr />
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_gsm" />
            <div class="form-group">
                <label asp-for="numero" class="control-label">Número</label>
                <input asp-for="numero" class="form-control" />
                <span asp-validation-for="numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="equipamento" class="control-label">Equipamento</label>
                <input asp-for="equipamento" class="form-control" />
                <span asp-validation-for="equipamento" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btnCreate" />
                    </div>
                </div>
                <div class="col-md-1">

                </div>
                <div class="col-md-5">
                    <a class="btn btnVoltarEdit" asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>

    </div>
    <div class="col-md-4">
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
