@model IEnumerable<Samsys_Custos.Data.CUSTO>

@{
    ViewData["Title"] = "Gsm";
    ViewBag.TitlePage = "Custos de GSM";
    ViewBag.Class = "fa-table";
}
@if (User.IsInRole("SuperAdmin") || User.IsInRole("Gsm") || User.IsInRole("Gestor"))
{
    <br />
    <center><h2>Custos de GSM</h2></center>
    <br />
    <div>
        <a class=" btn btnActionCreate" asp-action="CriarGsm">Novo registo de Gsm</a>
    </div>
    <hr />
}
<br />
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>

                <th>
                    Ano
                </th>
                <th>
                    Mês
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    GSM
                </th>
                <th>
                    Colaborador
                </th>
                <th>
                    Opções
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.ano)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.valor)€
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CATEGORIA.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GSM.numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UTILIZADOR.nome)
                    </td>
                    <td>
                        <a asp-action="EditGsm" asp-route-id="@item.id_custo">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.id_custo" asp-route-page="Gsm">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
