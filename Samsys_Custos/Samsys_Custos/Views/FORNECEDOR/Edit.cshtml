@model Samsys_Custos.Data.FORNECEDOR

@{
    ViewData["Title"] = "Edit";
}

<br />
<center><h2>Editar Fornecedores</h2></center>
    <br />
    <hr />
    <br />
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id_fornecedor" />
                <div class="form-group">
                    <label asp-for="nome" class="control-label"></label>
                    <input asp-for="nome" class="form-control" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sugestao_categoria" class="control-label"></label>
                    <select asp-for="sugestao_categoria" class="form-control" asp-items="ViewBag.sugestao_categoria"></select>
                    <span asp-validation-for="sugestao_categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sugestao_custo" class="control-label">Custo Interno</label>
                    <select asp-for="sugestao_custo" class="form-control">
                        <option value="False">Sim</option>
                        <option value="True">Não</option>
                    </select>
                    <span asp-validation-for="sugestao_custo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <center> <input type="submit" value="Gravar" class="btn btnCreate" /></center>
                </div>
            </form>
            <div>
                <center> <a asp-action="Index">Voltar</a></center>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
