@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Grafico_Gerais", "CUSTO", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">

            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                Ola @User.Identity.Name !
            </a>
         
            <li>
                <button type="submit" class="btn btn-outline-warning" id="btnLogout">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <!--
       <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
         <i class="fa fa-fw fa-user-plus"></i>Register
     </a>
    -->
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
            <i class="fa fa-fw fa-sign-in"></i>Login
        </a>
    </ul>
}
