@model Samsys_Custos.Data.CUSTO

@{
    ViewData["Title"] = "CriarGsm";
}

<center style="padding-top:1%"><h2>Criar Custo de GSM</h2></center>
<hr />
<h8><b>Você está aqui : </b>Registo de Custos - <a asp-area="" asp-controller="CUSTO" asp-action="Gsm">GSM</a> / Novo Registo</h8>
<hr />

<div class="row">

    <div class="col-md-12">
        <form asp-action="CriarGsm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <div class="col-md-3">
                    <label asp-for="id_gsm" class="control-label" style="font-weight:bold;">Número</label>
                    <select asp-for="id_gsm" id="gsm" class="form-control" asp-items="ViewBag.id_gsm" required>
                        <option selected="selected">
                            Seleccione o Número
                        </option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="id_colaborador" class="control-label" style="font-weight:bold;">Colaborador</label>
                    <select asp-for="id_colaborador" id="colaborador" class="form-control" asp-items="ViewBag.id_colaborador">
                        <option selected="selected"></option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="id_categoria" class="control-label" style="font-weight:bold;">Categoria</label>
                    <select asp-for="id_categoria" class="form-control" asp-items="ViewBag.id_categoria"></select>
                </div>
                <div class="col-md-3">
                    <label asp-for="ano" class="control-label" style="font-weight:bold;">Ano</label>
                    <select asp-for="ano" class="form-control" asp-items="ViewBag.ano"></select>
                    <span asp-validation-for="ano" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3">
                    <label asp-for="mes" class="control-label" style="font-weight:bold;">Mês</label>
                    <select asp-for="mes" class="form-control">
                        <option value="janeiro">Janeiro</option>
                        <option value="fevereiro">Fevereiro</option>
                        <option value="março">Março</option>
                        <option value="abril">Abril</option>
                        <option value="junho">Junho</option>
                        <option value="julho">Julho</option>
                        <option value="agosto">Agosto</option>
                        <option value="setembro">Setembro</option>
                        <option value="outubro">Outubro</option>
                        <option value="novembro">Novembro</option>
                        <option value="dezembro">Dezembro</option>
                    </select>
                    <span asp-validation-for="mes" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="valor" class="control-label" style="font-weight:bold;">Valor</label>
                    <input asp-for="valor" class="form-control" />
                    <span asp-validation-for="valor" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    
                </div>
                <div class="col-md-3">
                    
                </div>
                </div>
            <div class="form-row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-6">
                            <a style="margin-top:10%" class="btn btnVoltarEdit2 form-control" asp-action="Gsm">Voltar</a>
                        </div>
                        <div class="col-md-6">
                            <input style="margin-top:10%" type="submit" value="Guardar" class="form-control btn btnSave" />
                        </div>
                    </div>
                </div>
            </div>
           
        </form>

</div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/js/atribuicao_gsm.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
