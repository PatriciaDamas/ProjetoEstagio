@model IEnumerable<Samsys_Custos.Data.CUSTO>

@{
    ViewData["Title"] = "Gsm";
}

<h2>Custo de Gsm</h2>

<p>
    <a asp-action="CriarGsm">Adicionar Custo Gsm</a>
</p>
<table class="table" id="mytable">
    <thead>
        <tr>
            <th>
                Data
            </th>
            <th>
                Ano
            </th>
            <th>
                Mês
            </th>
            <th>
                Valor
            </th>
            <th>
                Categoria
            </th>
            <th>
                GSM
            </th>
            <th>
                Colaborador
            </th>
            <th>
                Acções
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ano)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor)€
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CATEGORIA.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GSM.numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UTILIZADOR.nome)
                </td>
                <td>
                    <a asp-action="EditGsm" asp-route-id="@item.id_custo">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id_custo">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <script src="~/js/table.js"></script>
}
