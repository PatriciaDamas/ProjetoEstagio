@model Samsys_Custos.Data.CUSTO

@{
    ViewData["Title"] = "CriarPremio";
}

<h2>CriarPremio</h2>

<h4>CUSTO</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CriarPremio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_colaborador" class="control-label"></label>
                <select asp-for="id_colaborador" class="form-control" asp-items="ViewBag.id_colaborador"></select>
            </div>
            <div class="form-group">
                <label class="control-label" >Tipo de Categoria</label>
                <select class="form-control" id="tipo_categoria" asp-items="ViewBag.tipo_premio">
                    <option selected="selected">
                        Escolha uma Categoria de Prémio
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="id_categoria" class="control-label" >Rubrica</label>
                <select asp-for="id_categoria" class="form-control"  id="rubrica"></select>
            </div>
            <div class="form-group">
                <label asp-for="ano" class="control-label"></label>
                <input asp-for="ano" class="form-control" />
                <span asp-validation-for="ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mes" class="control-label"></label>
                <input asp-for="mes" class="form-control" />
                <span asp-validation-for="mes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="valor" class="control-label"></label>
                <input asp-for="valor" class="form-control" />
                <span asp-validation-for="valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/js/cascading_select.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
