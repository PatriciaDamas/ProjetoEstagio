@page
@model LoginModel

@{
    ViewData["Title"] = "Samsys";
    ViewData["Title2"] = "Analise de custos";

    Layout = "";
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="~/css/sb-admin.css" rel="stylesheet">
    <link href="~/css/button.css" rel="stylesheet">
    <style>

        .icon {
            width: 80px
        }

        div.center {
            text-align: center;
        }

        .mysection {
            margin: auto;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            width: 25%;
            height: 40%;
            background-color: rgba(0,0,0,0.05);
        }

        .recover {
            width: 40%;
            margin: auto;
            position: absolute;
            top: 90%;
            bottom: 0;
            left: 0;
            right: 0;
            float: none;
        }
        .login {
            width: 40%;
            margin: auto;
            position: absolute;
            top: 77.5%;
            bottom: 0;
            left: 0;
            right: 0;
            float: none;
        }
        .save {
            width: 60%;
            margin: auto;
            position: absolute;
            top: 62.5%;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .pass {
            width: 60%;
            margin: auto;
            position: absolute;
            top: 42.5%;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .email {
            width: 60%;
            margin: auto;
            position: absolute;
            top: 22.5%;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .form-group {
            width: 60%;
            margin: 2.5% auto;
            float: none;
        }

        h1.center {
            color: rgba(0,0,0,1);
            text-align: center;
            margin: auto;
            position: absolute;
            top: 12%;
            bottom: 0;
            left: 0;
            right: 0;
        }

        div.center {
            color: rgba(0,0,0,0.4);
            text-align: center;
            margin: auto;
            position: absolute;
            top: 80%;
            bottom: 0;
            left: 0;
            right: 0;
        }

        h5 {
            text-align: center;
            color: black;
        }

        p, p > a {
            text-align: center;
            color: rgba(0,0,0,0.4)
        }

        .btn {
            background-color: #FFB50F;
            color: white;
            font-weight: bold;
        }
       
    </style>

}
    <body>
        <h1 class="center">@ViewData["Title2"]</h1>
        <section class="mysection form-control">
            <form method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <h5>Inicio de Sessão</h5>
                <hr />
                <div class="email">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="pass">
                    <label asp-for="Input.Password">Palavra-passe</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="save">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Guardar credenciais?
                        </label>
                    </div>
                </div>
                <div class="login">
                    <button type="submit" class="btn btn-default form-control">Log in</button>
                </div>
                <div class="recover">
                    <p>
                        <a asp-page="./ForgotPassword">Recuperar palavra-passe?</a>
                    </p>
                </div>
            </form>
        </section>
        <div class="center">
            <h1>
                <img class="icon" src="~/images/samsysicon.png" />@ViewData["Title"]
            </h1>
        </div>


    </body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
