
@{
    ViewData["Title"] = "Custos Equipa";
    ViewBag.TitlePage = "Custos Equipa";
    ViewBag.Class = "fa-bar-chart";
}
<hr />
<h8><b>Você está aqui : </b>Análise de Custos - Custo por Equipas</h8>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-group" id="boxIcon"></i> Gráfico Custos por Equipa

            </div>
            <div class="card-body">
                <label class="control-label">Ano</label>
                <select class="form-control" asp-items="ViewBag.ano" id="select_ano"></select>
                <br />
                <div id="chartdiv" style="width: 100%;height: 500px"></div>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>




@section scripts {
    <script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
    <script src="https://www.amcharts.com/lib/3/serial.js"></script>
    <script src="https://www.amcharts.com/lib/3/plugins/dataloader/dataloader.min.js"></script>
    <script src="~/js/chart_equipa.js"></script>
}