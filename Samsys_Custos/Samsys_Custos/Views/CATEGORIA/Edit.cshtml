@model Samsys_Custos.Data.CATEGORIA

@{
    ViewData["Title"] = "Editar Categoria";
}

<center style="padding-top:1%"><h2>Editar Categoria</h2></center>
<hr />
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_categoria" />
            <div class="form-group">
                <label asp-for="id_pai" class="control-label">Identificador</label>
                <input asp-for="id_pai" class="form-control" />
                <span asp-validation-for="id_pai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nome" class="control-label">Categoria</label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <a class="btn btnVoltarEdit2 form-control" asp-action="Index">Voltar</a>
                       
                    </div>
                </div>
                <div class="col-md-6">
                    <input type="submit" value="Editar" class="btn btnSave form-control" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
